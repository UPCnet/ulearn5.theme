  <!-- Breadcrumb -->
  <replace css:theme-children=".breadcrumbs ol" css:content-children=".plone-breadcrumb ol" />
  <!-- <drop css:theme="#breadcrumbs" if-path="ca/"/>
  <drop css:theme="#breadcrumbs" if-path="es/"/>
  <drop css:theme="#breadcrumbs" if-path="en/"/> -->

  <!-- full-width breadcrumb -->
  <replace css:content="#viewlet-above-content" css:theme="#above-content" />

  <drop css:content=".documentFirstHeading" if-path="front-page/"/>

  <!-- Left column -->
  <rules css:if-content="#portal-column-one">
    <replace css:theme="#column1-container">
      <section class="col-lg-3 col-md-4 col-xs-12 side-bar">
        <xsl:copy-of css:select="#portal-column-one > *" />
      </section>
    </replace>
  </rules>

  <!-- Right column -->
  <rules css:if-content="#portal-column-two">
    <replace css:theme="#column2-container">
      <section class="col-lg-3 col-md-4 col-xs-12 side-bar">
        <xsl:copy-of css:select="#portal-column-two > *" />
      </section>
    </replace>
  </rules>

  <!-- Central column -->
  <replace css:theme="#content-container" method="raw">

    <xsl:variable name="central">
      <xsl:if test="//aside[@id='portal-column-one'] and //aside[@id='portal-column-two']">col-lg-6 col-md-4 col-xs-12</xsl:if>
      <xsl:if test="//aside[@id='portal-column-two'] and not(//aside[@id='portal-column-one'])">col-xs-12 col-sm-9</xsl:if>
      <xsl:if test="//aside[@id='portal-column-one'] and not(//aside[@id='portal-column-two'])">col-lg-9 col-md-8 col-xs-12</xsl:if>
      <xsl:if test="not(//aside[@id='portal-column-one']) and not(//aside[@id='portal-column-two'])">col-lg-12 col-md-12 col-sm-12 col-xs-12</xsl:if>
    </xsl:variable>

    <section id="main-content" class="{$central} main-content">
      <xsl:apply-templates css:select="#content" />
      <footer class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <xsl:copy-of css:select="#viewlet-below-content" />
        </div>
      </footer>
    </section>
  </replace>

  <!-- Alert message -->
  <replace css:theme-children="#global_statusmessage" css:content-children="#global_statusmessage" />

  <!-- Content header -->
  <replace css:theme="#portal-top" css:content-children="#portal-top" />

  <!-- Footer -->
  <replace css:theme-children="#portal-footer" css:content-children="#portal-footer-wrapper" />

  <replace css:theme-children="#portal-anontools" css:content-children="#portal-anontools" />

  <drop css:content="#portal-anontools" />
</rules>
